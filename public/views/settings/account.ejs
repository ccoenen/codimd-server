<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../codimd/head %>
</head>

<body>
    <%- include ../codimd/minimalHeader %>

    <div class="row ui-content">
        <div class="container-fluid">
            <h1><%= __('Account Settings') %></h1>
            <% if (validationErrors !== null) { %>
                <div class="alert alert-danger" style="max-width: 400px; margin: 0 auto;"><%= __('User could not be saved.') %></div>
            <% } %>

            <p>
                <a href="<%= serverURL %>/user/<%= user.username %>"><%= __('Visit public profile') %></a>
            </p>

            <form method="post" enctype="application/x-www-form-urlencoded">
                <fieldset>
                    <legend><%= __('About You') %></legend>

                    <%- validationErrorFor(validationErrors, 'displayname') %>
                    <p><%= __('user.displayname') %>: <input name="displayname" value="<%= user.displayname %>"></p>

                    <%- validationErrorFor(validationErrors, 'username') %>
                    <p><%= __('user.username') %>: <input name="username" value="<%= user.username %>"></p>

                    <%- validationErrorFor(validationErrors, 'email') %>
                    <p><%= __('user.email') %>: <input name="email" value="<%= user.email %>"></p>
                </fieldset>
                <fieldset>
                    <legend>Change Your Password</legend>
                    <%- validationErrorFor(validationErrors, 'invalid_password_given') %>
                    <p><%= __('user.old_password') %>: <input name="old_password" type="password" value=""></p>
                    <p><%= __('user.new_password') %>: <input name="new_password" type="password" value=""></p>
                    <p><%= __('user.new_password_confirmation') %>: <input name="new_password_confirmation" type="password" value=""></p>
                </fieldset>
                <input type="submit" value="save">
            </form>

            <h2><%= __('Preferred Language') %></h2>
            <%- include ../shared/select_locale %>

            <h2><%= __('Your Data') %></h2>
            <p>
                <a href="<%- serverURL %>/settings/account/export"><i class="fa fa-cloud-download fa-fw"></i> <%= __('Export user data') %></a>
            </p>
            <p>
                <a href="" class="ui-delete-user" data-toggle="modal" data-target=".delete-user-modal"><i class="fa fa-trash fa-fw"></i> <%= __('Delete user') %></a>
            </p>
        </div>
    </div>

    <%- include ./_delete_user_modal %>
    <%- include ../codimd/footer %>
    <%- include ../codimd/foot %>
</body>

</html>
